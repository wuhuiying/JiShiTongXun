<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:padding="15dp"
        android:textSize="16sp"
        android:gravity="center"
        android:text="@string/tongxunlu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:background="#a2000000"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:background="#0b000000"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/tongxunlu_img"
            android:src="@drawable/aa"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

         <RadioGroup
             android:id="@+id/tongxunlu_rg"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <RadioButton
                 android:checked="true"
                 android:button="@null"
                 android:clickable="true"
                 android:gravity="center"
                 android:text="手机通讯录"
                 android:background="@drawable/selector1"
                 android:layout_weight="1"
                 android:id="@+id/tongxunlu_text1"
                 android:layout_width="0dp"
                 android:layout_height="match_parent" />
             <RadioButton
                 android:button="@null"
                 android:gravity="center"
                 android:text="我的好友"
                 android:background="@drawable/selector1"
                 android:layout_weight="1"
                 android:id="@+id/tongxunlu_text2"
                 android:layout_width="0dp"
                 android:layout_height="match_parent" />
             <RadioButton
                 android:button="@null"
                 android:gravity="center"
                 android:text="我的群组"
                 android:background="@drawable/selector1"
                 android:layout_weight="1"
                 android:id="@+id/tongxunlu_text3"
                 android:layout_width="0dp"
                 android:layout_height="match_parent" />
         </RadioGroup>


    <FrameLayout
            android:id="@+id/tongxunlu_FrameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>
    </LinearLayout>


</LinearLayout>
