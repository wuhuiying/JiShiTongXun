<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.kejibeidou.View.Activity.RegActivity">

    <TextView
        android:padding="15dp"
        android:textSize="18sp"
        android:gravity="center"
        android:text="@string/main_zhuce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:background="#0b000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">

            <!--<ImageView-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:src="@drawable/u6" />-->
            <EditText
               android:phoneNumber="true"
              android:singleLine="true"
                android:layout_gravity="center_vertical"
                android:hint="请输入手机号"
                android:id="@+id/zhuce_EditText_name"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">

            <!--<ImageView-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:src="@drawable/u6" />-->

            <EditText
                android:singleLine="true"
                android:layout_gravity="center_vertical"
                android:hint="请输入验证码"
                android:id="@+id/zhuce_EditText_yanzhenma"
                android:background="@null"
                android:layout_width="350dp"
                android:layout_height="wrap_content" />

            <Button
                android:text="@string/zhuce_yanzhenma"
                android:id="@+id/zhuce_yuanzhenma"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">

            <!--<ImageView-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:src="@drawable/u6" />-->

            <EditText
                android:singleLine="true"
                android:layout_gravity="center_vertical"
                android:hint="请输入6-16位密码"
                android:id="@+id/zhuce_password"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">

            <!--<ImageView-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:src="@drawable/u6" />-->

            <EditText
                android:singleLine="true"
                android:layout_gravity="center_vertical"
                android:hint="请再次输入密码"
                android:id="@+id/zhuce_password2"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">

            <!--<ImageView-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:src="@drawable/u6" />-->

            <EditText
                android:singleLine="true"
                android:layout_gravity="center_vertical"
                android:hint="请输入真实姓名"
                android:id="@+id/zhuce_name"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <Button
            android:id="@+id/zhuce_but_zhuce"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="34dip"
            android:background="@drawable/rs_select_btn_blue"
            android:text="登录"
            android:textColor="#FFFFFF"></Button>

    </LinearLayout>

</LinearLayout>
