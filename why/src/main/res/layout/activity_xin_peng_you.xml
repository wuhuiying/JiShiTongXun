<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.kejibeidou.View.Activity.NewFriendActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/xinpengyou_img"
            android:src="@drawable/u547"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:textSize="20sp"
            android:gravity="center"
            android:text="新朋友"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:textSize="20sp"
            android:gravity="center"
            android:text="添加"
            android:id="@+id/xinpengyou_tianjia"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <TextView
        android:background="#6f000000"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
    <ListView
        android:id="@+id/xinpengyou_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>
